---
import hafsData from "../data/hafs.json";

interface Props {
  surah: number;
  ayah: number;
}

const { surah, ayah } = Astro.props;

const ayahData = hafsData.find(
  (aya) => aya.sura_no === surah && aya.aya_no === ayah,
);
---

<p class="font-uthmanic-hafs rtl text-right text-5xl leading-[2]">
  {ayahData?.aya_text}
</p>
